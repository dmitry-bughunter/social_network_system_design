@startuml
!include https://raw.githubusercontent.com/plantuml-stdlib/C4-PlantUML/master/C4_Container.puml

Person(user, "User")

Container(postSystem, "Post system", "Software system", "Stores posts, generates personalized feeds of posts for users based on their subscriptions")
Container(userSystem, "User system", "Software system", "Stores information about users")
Container(followingSystem, "Following system", "Software system", "Stores information about subscriptions")
Container(locationSystem, "Location system", "Software system", "Stores information about posts locations")
Container(reactionSystem, "User system", "Software system", "Stores information about user reactions to post")
Container(contentSystem, "Content system", "Software system", "Generates presigned urls for uploading")

Rel(user, postSystem, "Creates, gets posts and feeds")
Rel(user, locationSystem, "Gets popular locations")
Rel(user, reactionSystem, "Gets comments and ratings of posts")
@enduml